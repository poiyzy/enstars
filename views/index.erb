<div class="news" style="background-color:red">
<ul>
	<% @postnew.each do |pn| %>
		<li><%= pn.title %></li>
	<% end %>
</ul>
</div>

<div class="pic" style="background-color:green">
<ul>
	<% @postpic.each do |pp| %>
		<li><%= pp.title %></li>
		<img src="<%= pp.pic %>">
	<% end %>
</ul>
</div>

<div class="video" style="background-color:bule">
<ul>
	<% @postvideo.each do |pv| %>
		<li><%= pv.title %><%= pv.video %></li>
		
	<% end %>
</ul>
</div>